<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <com.xywg.pm.projectmanager.view.MyHeadView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x144"
        app:left_icon="@mipmap/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:gravity="center"
        android:text="请按照提示完成注册" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x45"
        android:text="验证码"
        android:textColor="@color/color_000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.xywg.pm.projectmanager.view.CountLineEditText
        android:id="@+id/count_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginStart="@dimen/x45" />

    <com.example.common.widget.view.RTextView
        android:id="@+id/rt_register"
        android:layout_width="@dimen/x800"
        android:layout_height="@dimen/x130"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/x100"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:background_normal="@color/color_3f9cfe"
        app:corner_radius="@dimen/x50" />

</LinearLayout>