<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <com.xywg.pm.projectmanager.view.MyHeadView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x144"
        app:left_icon="@mipmap/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:gravity="center"
        android:text="请按照提示完成注册" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginStart="@dimen/x45"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.xywg.pm.projectmanager.view.LineEditText
            android:id="@+id/et_name"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:hint="请输入您的用户名"
            android:maxLength="15"
            android:paddingBottom="@dimen/x30"
            android:paddingTop="@dimen/x30"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginStart="@dimen/x45"
        android:layout_marginTop="@dimen/x20"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.xywg.pm.projectmanager.view.CodeLineEditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x45"
        android:layout_marginStart="@dimen/x45"
        android:layout_marginTop="@dimen/x20"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.xywg.pm.projectmanager.view.LineEditText
            android:id="@+id/et_phone"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="@dimen/x30"
            android:paddingTop="@dimen/x30"
            android:singleLine="true"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp" />

    </LinearLayout>

    <com.example.common.widget.view.RTextView
        android:id="@+id/rt_next"
        android:layout_width="@dimen/x800"
        android:layout_height="@dimen/x130"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x100"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:background_normal="@color/color_3f9cfe"
        app:corner_radius="@dimen/x50" />

</LinearLayout>